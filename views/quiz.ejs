<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= Title %> </title>
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <!-- jQuery and JS bundle w/ Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</head>
<body class="text-center bg-dark">
    <h1 class="jumbotron bg-dark text-white"> <%= Questions[0].language %> Quiz</h1>

    <div class="container bg-secondary">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <!-- load first question here -->
                <% console.log(Questions) %>
                <div class="carousel-item active" style="margin-top: 2em;">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            <h2>
                                <%= Questions[0].question %>
                            </h2>
                        </div>
                    </div>
                    <div class="row justify-content-center" style="margin-bottom: 2em; margin-top: 2em;">
                        <div class="col-4">
                            <!-- load choices-->
                            <select class="form-control" id='q<%= 1 %>'>
                                <option selected > Select... </option>
                                <% for(var i = 0; i < Questions[0].choices.length; i++) { %>
                                <option>
                                    <%= Questions[0].choices[i] %>
                                </option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Load the rest of the qustions -->
                <% for(var i = 1; i < Questions.length; i++) { %>
                <div class="carousel-item" style="margin-top: 2em;">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            <h2>
                                <%= Questions[i].question %>
                            </h2>
                        </div>
                    </div>

                    <div class="row justify-content-center" style="margin-bottom: 2em; margin-top: 2em;">
                        <div class="col-4">
                            <!-- load choices-->
                            <select class="form-control" id='q<%= i + 1 %>'>
                                <option selected > Select... </option>
                                <% for(var j = 0; j < Questions[0].choices.length; j++) { %>
                                <option>
                                    <%= Questions[i].choices[j] %>
                                </option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                </div>

                <% } %>

            </div>

            <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <button type="button" class="btn btn-info" style="margin-top: 3em;">Submit</button>

    <script>
        $(document).ready(function() {
            $('.carousel').carousel({
                interval: 360000,
                pause: 'hover',
                wrap: false
            })

            $('button').click(function() {
                var counter = 0
                console.log($('#q1').val())

                if($('#q1').val() == '<%= Questions[0].answer %>') {
                    console.log('Correct')
                }

            })

        })
    </script>
</body>
</html>